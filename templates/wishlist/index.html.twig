{% extends 'base.html.twig' %}

{% block title %}Wishlist index{% endblock %}

{% block body %}
    <h1>Wishlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wishlist in wishlists %}
            <tr>
                <td>{{ wishlist.id }}</td>
                <td>{{ wishlist.title }}</td>
                <td>{{ wishlist.description }}</td>
                <td>
                    <a href="{{ path('wishlist_show', {'id': wishlist.id}) }}">show</a>
                    <a href="{{ path('wishlist_edit', {'id': wishlist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('wishlist_new') }}">Create new</a>
{% endblock %}